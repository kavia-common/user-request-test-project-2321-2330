{
  "name": "kavia-chat",
  "displayName": "KAVIA Chat",
  "publisher": "your-publisher",
  "description": "KAVIA Chat - VS Code sidebar chat extension scaffold.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:kaviaChat.open",
    "onCommand:kaviaChat.sendSelection",
    "onCommand:kaviaChat.setOpenAIKey",
    "onCommand:kaviaChat.tools.readFile",
    "onCommand:kaviaChat.tools.writeFile",
    "onCommand:kaviaChat.tools.produceDiff",
    "onCommand:kaviaChat.tools.applyDiff",
    "onView:kaviaChat.view"
  ],
  "main": "./out/extension.js",
  "icon": "",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kaviaChat",
          "title": "KAVIA",
          "icon": "resources/kavia-codicon.svg"
        }
      ]
    },
    "views": {
      "kaviaChat": [
        {
          "type": "webview",
          "id": "kaviaChat.view",
          "name": "Chat",
          "contextualTitle": "KAVIA Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "kaviaChat.open",
        "title": "KAVIA Chat: Open Chat",
        "category": "KAVIA Chat"
      },
      {
        "command": "kaviaChat.sendSelection",
        "title": "KAVIA Chat: Send Selection",
        "category": "KAVIA Chat"
      },
      {
        "command": "kaviaChat.setOpenAIKey",
        "title": "KAVIA Chat: Set OpenAI API Key",
        "category": "KAVIA Chat"
      },
      {
        "command": "kaviaChat.tools.readFile",
        "title": "KAVIA Chat Tools: Read File",
        "category": "KAVIA Chat"
      },
      {
        "command": "kaviaChat.tools.writeFile",
        "title": "KAVIA Chat Tools: Write File (confirm)",
        "category": "KAVIA Chat"
      },
      {
        "command": "kaviaChat.tools.produceDiff",
        "title": "KAVIA Chat Tools: Produce Diff",
        "category": "KAVIA Chat"
      },
      {
        "command": "kaviaChat.tools.applyDiff",
        "title": "KAVIA Chat Tools: Apply Diff (confirm)",
        "category": "KAVIA Chat"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "KAVIA Chat",
      "properties": {
        "kaviaChat.provider": {
          "type": "string",
          "default": "mock",
          "enum": [
            "mock",
            "openai",
            "ollama",
            "langchain"
          ],
          "enumDescriptions": [
            "Use a mock provider (for development)",
            "Use OpenAI provider (configure API key)",
            "Use local Ollama server (configure baseURL/model)",
            "Use built-in LangChain agent (with optional tools)"
          ],
          "description": "Select AI provider/agent to use for chat."
        },
        "kaviaChat.mode": {
          "type": "string",
          "default": "assistant",
          "enum": ["assistant", "agent"],
          "description": "Interaction mode. Agent mode enables tool usage where available."
        },
        "kaviaChat.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 2,
          "description": "Sampling temperature."
        },
        "kaviaChat.maxTokens": {
          "type": "number",
          "default": 1024,
          "minimum": 1,
          "description": "Maximum tokens to generate (provider specific semantics)."
        },
        "kaviaChat.topP": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 1,
          "description": "Top-p nucleus sampling parameter."
        },
        "kaviaChat.frequencyPenalty": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 2,
          "description": "Frequency penalty (where supported)."
        },
        "kaviaChat.presencePenalty": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 2,
          "description": "Presence penalty (where supported)."
        },
        "kaviaChat.systemPrompt": {
          "type": "string",
          "default": "You are a helpful coding assistant.",
          "markdownDescription": "System prompt injected before user messages."
        },

        "kaviaChat.openai.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model identifier (e.g., gpt-4o, gpt-4o-mini, gpt-4.1-mini)."
        },
        "kaviaChat.openai.baseURL": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "markdownDescription": "Base URL for OpenAI-compatible API. Useful for proxies or Azure/OpenAI-compatible services.",
          "pattern": "^https?://.*",
          "patternErrorMessage": "Must be a valid http(s) URL."
        },

        "kaviaChat.ollama.model": {
          "type": "string",
          "default": "llama3.1",
          "description": "Ollama model name (e.g., llama3.1, qwen2.5-coder)."
        },
        "kaviaChat.ollama.baseURL": {
          "type": "string",
          "default": "http://localhost:11434",
          "pattern": "^https?://.*",
          "patternErrorMessage": "Must be a valid http(s) URL.",
          "description": "Ollama server base URL."
        },

        "kaviaChat.langchain.tools.enableRead": {
          "type": "boolean",
          "default": false,
          "description": "Enable MCP read file tool for LangChain agent."
        },
        "kaviaChat.langchain.tools.enableWrite": {
          "type": "boolean",
          "default": false,
          "description": "Enable MCP write file tool for LangChain agent (confirmation required)."
        },
        "kaviaChat.langchain.tools.enableDiff": {
          "type": "boolean",
          "default": false,
          "description": "Enable MCP diff/patch tool for LangChain agent (confirmation required)."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "vsce package || echo \"Install 'vsce' globally to package: npm i -g @vscode/vsce\""
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0",
    "@vscode/test-electron": "^2.3.9"
  }
}
